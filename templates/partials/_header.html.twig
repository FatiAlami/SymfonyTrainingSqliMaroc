<div class="top-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-3">
                <div class="logo">
                    <a href="">
                        <img src="{{ asset('assets/img/logo.png') }}" alt="Logo">
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <form action="{{ url('search') }}">
                    <div class="search">
                        <input type="text" placeholder="Search" name="q">
                        <button><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="col-md-5">
                <div class="col-md-6 ln-container"> {{ render(controller('App\\Controller\\DefaultController::user')) }}</div>
                {% if app.request.getLocale() == 'en' %}
                <a href="{{ path('change_locale', {'locale':'fr'}) }}"><img class="ln-switcher" src="{{ asset('/assets/img/fr.png')}}" alt="FR"></a>
                {% else %}
                <a href="{{ path('change_locale', {'locale':'en'}) }}"><img class="ln-switcher" src="{{ asset('/assets/img/en.png') }}" alt="EN"></a>
                {% endif %}
            </div>
        </div>

